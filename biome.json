{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "off",
        "useImportExtensions": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useBlockStatements": "error",
        "useTemplate": "error",
        "noShoutyConstants": "off",
        "useConsistentArrayType": { "level": "error", "options": { "syntax": "shorthand" } }
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "warn"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "a11y": {},
      "nursery": {}
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 180
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "files": {
    "includes": ["**", "!**/dist/**/*", "!**/node_modules/**/*", "!**/coverage/**/*", "!**/test/**/*.js"]
  }
}
